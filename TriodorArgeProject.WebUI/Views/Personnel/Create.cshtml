<script>

    $(document).ready(function () {
       @* $("#educationinfo").load("/Personnel/GetEducationInfo/");
        $("#certificateinfo").load("/Personnel/GetCertificateInfo/");
        $("#workexperience").load("/Personnel/GetWorkExperienceInfo/");
        $("#abilityinfo").load("/Personnel/GetAbilityInfo/");*@
        document.querySelectorAll('[role="menuitem"][href="#finish"]').forEach(function (el) {
            $(el).attr("onclick", "document.getElementById('personnelcreateform').submit();");
        });
        $('input[name="work"]').change(function () {
            if ($('#working').prop('checked')) {
                $("#leaveform").css("visibility", "hidden");
            } else {
                $("#leaveform").css("visibility", "visible");
            }
        });
    });
    $(function () {
        $("addEducation").on('show.bs.modal', function () {
            $("addEducation_body").load("/Personnel/GetAddEducation");
        });
        $("addCertificate").on('show.bs.modal', function () {
            $("addCertificate_body").load("/Personnel/GetAddCertificate");
        });
        $("addWorkExperience").on('show.bs.modal', function () {
            $("addWorkExperience_body").load("/Personnel/GetAddWorkExperience");
        });
        $("addAbility").on('show.bs.modal', function () {
            $("addAbility_body").load("/Personnel/GetAddAbility");
        });
    });
</script>

