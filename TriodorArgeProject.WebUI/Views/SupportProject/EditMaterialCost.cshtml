@model TriodorArgeProject.Entities.EntityClasses.MaterialCosts
@{ ViewBag.Title = "EditMaterialCosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Edit Material Costs</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Support Project</a></li>
                <li class="breadcrumb-item active">Edit Material Cost</li>
            </ol>
        </div>

    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-block">
                    @if (ViewBag.MATERIALMESSAGE != null)
                    {
                        <div class="col-md-12">
                            <div class="alert alert-warning" role="alert">
                                @ViewBag.MATERIALMESSAGE
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-body">
                            @Html.Hidden("CostID",Model.CostID)
                            @Html.Hidden("ID",Model.ID)
                            <div class="row p-t-20">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Material</label>
                                        <input type="text" id="description" name="Description" class="form-control">

                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="control-label">Count</label>
                                    <div class="input-group">

                                        <input type="text" id="Count" name="Count" class="form-control">
                                        <span class="input-group-addon" id="basic-addon2">Piece</span>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Actual</label>
                                    <div class="input-group">

                                        <input type="text" id="Actual" name="Actual" class="form-control">
                                        <span class="input-group-addon" id="basic-addon2">₺</span>

                                    </div>
                                </div>


                                <!--/span-->
                                <!--/span-->
                            </div>
                            <div class="row">

                                <div class="col-md-3">
                                    <label class="control-label">Planned</label>
                                    <div class="input-group">

                                        <input type="text" id="Planned" name="Planned" class="form-control">
                                        <span class="input-group-addon" id="basic-addon2">₺</span>

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">Accepted</label>
                                    <div class="input-group">

                                        <input type="text" id="Accepted" name="Accepted" class="form-control">
                                        <span class="input-group-addon" id="basic-addon2">₺</span>

                                    </div>
                                </div>
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label class="control-label">Note</label>
                                        <input type="text" id="Note" name="Note" class="form-control">

                                    </div>

                                </div>
                            </div>
                           
                            <!--/row-->

                            <br />
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>

                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-inverse" })
                        </div>
                    }
                </div>

            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
</div>
